<div class="container">
  <nav aria-label="Page navigation example" data-controller="pagination">
    <ul class="pagination justify-content-center">
      <li class="page-item">
        <%= link_to "previous", people_path(page: previous_page), class: "page-link" %>
      </li>
      <li class="page-item">
        <%= link_to page_option_1, people_path(page: page_option_1), class: "page-link" %>
      </li>
      <li class="page-item">
        <%= link_to page_option_2, people_path(page: page_option_2), class: "page-link" %>
      </li>
      <li class="page-item">
        <%= link_to page_option_3, people_path(page: page_option_3), class: "page-link" %>
      </li>
      <li class="page-item">
        <%= link_to "Next", people_path(page: next_page), class: "page-link" %>
      </li>
    </ul>
  </nav>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email Address</th>
        <th scope="col">Job Title</th>
      </tr>
    </thead>
    <tbody>
      <% @people.each do |person| %>
        <tr>
          <td><%= person["display_name"] %></td>
          <td><%= person["email_address"]%></td>
          <td><%= person["title"]%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>